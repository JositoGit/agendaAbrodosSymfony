{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
    <div class="container marginTopBottomLittle">
    <h1>Contact</h1>
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ contact.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ contact.name }}</td>
            </tr>
            <tr>
                <th>Surname</th>
                <td>{{ contact.surname }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ contact.phone }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ contact.email }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ contact.type }}</td>
            </tr>
            <tr>
                <th>Note</th>
                <td>{{ contact.note }}</td>
            </tr>
        </tbody>
    </table>
    <div class="row justify-content-center">
        {{ include('contact/_delete_form.html.twig') }}</div>
    </div>
